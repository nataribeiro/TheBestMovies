<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".views.activities.MovieDetailsActivity">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintDimensionRatio="H,0.6"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/ivPoster"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
        <TextView
                tools:text="Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvMovieTitle" app:layout_constraintStart_toEndOf="@+id/ivPoster"
                android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/ivPoster" android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
        <TextView
                tools:text="Genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvMovieGenres" app:layout_constraintStart_toEndOf="@+id/ivPoster"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/ivPoster" app:layout_constraintBottom_toBottomOf="@+id/ivPoster"
                android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
        <TextView
                tools:text="Release date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvMovieReleaseDate" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivPoster"
                app:layout_constraintStart_toEndOf="@+id/ivPoster"
                android:layout_marginStart="16dp" android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>
        <TextView
                tools:text="Overview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvMovieOverview" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/ivPoster" android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

